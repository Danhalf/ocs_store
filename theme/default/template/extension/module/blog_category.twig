<div class="list-group sections">
  <h3 class="sections__title underline">Разделы</h3>
  {% for category in categories %}
  {% if category.blog_category_id == blog_category_id %} 
  <a href="{{ category.href }}" class="list-group-item sections__item active">{{ category.name }}</a> 
  {% if category.children %}
  {% for child in category.children %}
  {% if child.blog_category_id == child_id %}
  <a href="{{ child.href }}" class="list-group-item sections__item active">&nbsp;&nbsp;&nbsp;- {{ child.name }}</a> 
  {% else %} 
  <a href="{{ child.href }}" class="list-group-item sections__item">&nbsp;&nbsp;&nbsp;- {{ child.name }}</a>
  {% endif %}
  {% endfor %}
  {% endif %}
  {% else %} <a href="{{ category.href }}" class="list-group-item sections__item">{{ category.name }}</a>
  {% endif %}
  {% endfor %}
</div>
